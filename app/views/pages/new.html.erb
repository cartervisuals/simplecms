<%= error_messages_for(@page) %>

<%= link_to("<< Back to List", {:action => 'index', :class => 'back-link'}) %>

<div class="pages new">
  <h2> Create Page </h2>

  <%= form_for(:page, :url => {:action => 'create'}) do |f| %>

    <table summary="Subject from fields">
      <tr>
        <th>Subject</th>
        <td><%= f.select(:subject_id, @subjects.map { |s| [s.name, s.id] }) %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Permalink</th>
        <td><%= f.text_field(:permalink) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.select(:position, 1..@page_count) %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= f.text_field(:visible) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Create Page") %>
    </div>

  <% end %>

</div>